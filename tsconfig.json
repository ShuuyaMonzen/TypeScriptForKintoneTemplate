{
  "compilerOptions": {
    "baseUrl": "./",
    // モジュールの参照先解決の指定
    "moduleResolution": "node",
    "module": "commonjs",
    // import 時にファイルの大文字小文字を区別する
    "forceConsistentCasingInFileNames": true,
    // ソースマップを有効化
    "sourceMap": true,
    "target": "es5",
    // 厳密モードとして設定
    "strict": true,
    // 型参照先の設定
    "typeRoots": [
      "src/ts/@types",
      "node_modules/@types"
    ],
    // tsファイルの起点パスを@に設定
    "paths": {
      "@/*": [
          "src/ts/*"
      ]
    },
    // DI用設定
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "compileOnSave": true,
  "include": [
	  "src/ts",
  ],
  "exclude": ["node_modules"]
}